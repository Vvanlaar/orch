{
  "name": "orch",
  "version": "0.1.0",
  "description": "Event-driven Claude Code orchestrator for GitHub and Azure DevOps",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "dev:server": "tsx watch src/server/index.ts",
    "dev:dashboard": "vite src/dashboard",
    "build": "tsc && npm run build:dashboard",
    "build:dashboard": "vite build src/dashboard",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "dev": "concurrently --kill-others \"npm:dev:server\" \"npm:dev:dashboard\""
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "cors": "^2.8.6",
    "dotenv": "^16.4.0",
    "express": "^4.21.2",
    "octokit": "^4.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "@types/ws": "^8.5.13",
    "concurrently": "^9.2.1",
    "svelte": "^5.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^5.4.0",
    "vitest": "^2.1.0"
  }
}
